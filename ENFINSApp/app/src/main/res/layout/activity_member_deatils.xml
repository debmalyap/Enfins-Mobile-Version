<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberDeatilsActivity">

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#2595EB"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Add New Member Details"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="130dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/parentLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Row1st"
                style="@style/FormRowTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextMemberCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:drawablePadding="10dp"
                            android:hint="Member Code"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:drawableStart="@drawable/outline_poll_black_36dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Collection Day"
                        style="@style/TextView.InputLabel"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerMemberCollectionDay"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingBottom="16dp"
                        android:spinnerMode="dialog"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2nd"
                style="@style/FormRowTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collection Point Name"
                    style="@style/TextView.InputLabel"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnerMemberCollectionPointName"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingBottom="16dp"
                    android:spinnerMode="dialog"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3rd"
                style="@style/FormRowTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33">

                    <EditText
                        android:id="@+id/editTextMemberFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="10dp"
                        android:hint="First Name"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/outline_account_box_black_36dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33">

                    <EditText
                        android:id="@+id/editTextMemberMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="10dp"
                        android:hint="Middle Name"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/outline_account_box_black_36dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33">

                    <EditText
                        android:id="@+id/editTextMemberLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="10dp"
                        android:hint="Last Name"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/outline_account_box_black_36dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4th"
                style="@style/FormRowTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
